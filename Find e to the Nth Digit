from math import e

def nth_digit_e():
    
    print('*Find e to the Nth digit*\n')
    
    number = 0
    
    while True:
        number = int(input('Please, enter a number between 1-15: '))
        
        if number not in range(1,16):
            print('Invalid number!')
            continue
        
        else:
            print(f'\ne rounded to {number} decimal places is {round(e, number)}')
            break

nth_digit_e()
