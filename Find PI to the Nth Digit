from math import pi

def nth_digit_pi():
    
    print('*Find pi to the Nth digit*\n')
    
    number = 0
    
    while True:
        number = int(input('Please, enter a number between 1-15: '))
        
        if number not in range(1,16):
            print('Invalid number!')
            continue
        
        else:
            print(f'\nÏ€(pi)rounded to {number} decimal places is {round(pi, number)}')
            break

nth_digit_pi()
